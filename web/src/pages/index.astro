---
import ClassDoc from "../components/ClassDoc.astro";
import Header from "../components/Header.astro";
import Section from "../components/Section.astro";
import Sooner from "../components/svelte/sooner.svelte";
---

<style is:global>
  @keyframes appear-section {
    from {
      opacity: 0;
      transform: translateX(-300px);
    }

    to {
      opacity: 100%;
      transform: translateX(0);
    }
  }

  @keyframes progress {
    from {
      width: 0;
    }

    to {
      width: 100%;
    }
  }
</style>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body class="dark text-white bg-neutral-950 overflow-x-hidden">
    <div class="fixed w-full top-0 left-0 z-20">
      <div
        class="bg-[#7474ca] h-1 animate-[progress] animation-timeline-scroll"
      >
      </div>
    </div>
    <Sooner client:idle />
    <!-- background -->
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <div class="flex flex-col gap-20 items-center pb-32">
      <Section
        title="Animation Timeline"
        subtitle="Initialize the animation and choose which timeline will control it."
      >
        <ClassDoc
          className="animation-timeline-scroll"
          code={`--animation-scroller: root;
--animation-axis: block;
--animation-range-start: 0;
--animation-range-end: 100%;

animation-range: var(--animation-range-start) var(--animation-range-end);
animation-timeline: scroll(var(--animation-scroller) var(--animation-axis));
animation-fill-mode: both;
animation-iteration-count: unset;
animation-duration: auto;`}
        />
        <ClassDoc
          className="animation-timeline-view"
          code={`--animation-axis: block;
--animation-range-start: 0;
--animation-range-end: 100%;

animation-range: entry var(--animation-range-start) cover var(--animation-range-end);
animation-timeline: view(var(--animation-axis));
animation-fill-mode: both !important;
animation-iteration-count: unset !important;
animation-duration: auto !important;`}
        />
      </Section>
      <Section
        title="Animation Range"
        subtitle="Control the range of your animation."
      >
        <ClassDoc
          className="animation-range-s animation-range-e"
          code={`animation-range-s /* Where the range starts */
animation-range-e /* Where the range end */

/* You can use the following values */
xs: "100px"
sm: "200px"
md: "300px"
lg: "500px"
"9/10": "90%"
"4/5": "80%"
"3/4": "75%"
"2/3": "66%"
"1/2": "50%"
"1/3": "33%"
"1/4": "25%"
"1/5": "20%"
"1/10": "10%"
full: "100%"

/* Or use arbitrary values */
animation-range-s-[25%]
animation-range-e-[1000px]`}
        />
      </Section>
      <Section
        title="Animation Scroller"
        subtitle="This will set the scroller element that will provide the scroll progress"
      >
        <ClassDoc
          className="animation-scroller"
          code={`/* You can use any of the following values */

animation-scroller-nearest /* The nearest ancestor of the current element that has scrollbars on either axis */
animation-scroller-root /* The root element of the document. */
animation-scroller-self /* The current element itself. */`}
        />
      </Section>
      <Section
        title="Animation Axis"
        subtitle="This will set the scrollbar axis value"
      >
        <ClassDoc
          className="animation-scroller"
          code={`/* You can use any of the following values */

animation-axis-x /* The scrollbar on the horizontal axis of the scroll container. */
animation-axis-y /* The scrollbar on the vertical axis of the scroll container. */`}
        />
      </Section>
      <Section
        title="Examples"
        subtitle="This examples are made using Astro and you can see the result applied to this same page."
      >
        <ClassDoc
          className="This page's scroll progress bar"
          code={`<style>
  @keyframes progress {
    from {
      width: 0;
    }

    to {
      width: 100%;
    }
  }
</style>
<div class="fixed w-full top-0 left-0 z-10">
  <div class="bg-white h-1 animate-[progress] animation-timeline-scroll">
  </div>
</div>`}
        />
        <ClassDoc
          className="This page's opacity appear animation"
          code={`<style>
  @keyframes appear {
    from {
      opacity: 0;
      transform: translateX(-300px);
    }

    to {
      opacity: 100%;
      transform: translateX(0);
    }
</style>
<article
  class="animate-[appear] animation-timeline-view animation-range-e-lg animation-range-s-xs"
>
  ...
</article>`}
        />
        <ClassDoc
          className="And you can add more fun easily"
          code={`<style>
  @keyframes appear {
    from {
      opacity: 0;
      trans
    }

    to {
      opacity: 100%;
    }
  }
</style>
<article
  class="animate-[appear] animation-timeline-view animation-range-e-lg animation-range-s-xs"
>
  ...
</article>`}
        />
      </Section>
    </div>
  </body>
</html>
